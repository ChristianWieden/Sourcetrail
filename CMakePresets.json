{
	"version": 3,
	"configurePresets": [
		{
			"name": "defaults",
			"hidden": true,
			"warnings": { "dev": false },
			"generator": "Ninja",
			"binaryDir": "${sourceParentDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": {
					"value": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
					"type": "FILEPATH"
				},
				"CMAKE_VERBOSE_MAKEFILE": {
					"value": "TRUE",
					"type": "BOOL"
				},
				"CMAKE_EXPORT_COMPILE_COMMANDS": {
					"value": "TRUE",
					"type": "BOOL"
				},
				"CMAKE_MESSAGE_LOG_LEVEL": {
					"value": "VERBOSE",
					"type": "STRING"
				},
				"BUILD_CXX_LANGUAGE_PACKAGE": {
					"value": "ON",
					"type": "BOOL"
				},
				"BUILD_JAVA_LANGUAGE_PACKAGE": {
					"value": "ON",
					"type": "BOOL"
				},
				"BUILD_PYTHON_LANGUAGE_PACKAGE": {
					"value": "ON",
					"type": "BOOL"
				}
			}
		},
		{
			"name": "Debug",
			"displayName": "Debug Build",
			"inherits": "defaults",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"value": "Debug",
					"type": "STRING"
				}
			}
		},
		{
			"name": "Release",
			"displayName": "Release Build",
			"inherits": "defaults",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"value": "Release",
					"type": "STRING"
				}
			}
		},
		{
			"name": "RelWithDebInfo",
			"displayName": "RelWithDebInfo Build",
			"inherits": "defaults",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": {
					"value": "RelWithDebInfo",
					"type": "STRING"
				}
			}
		}
	]
}
