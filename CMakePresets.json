{
	"version": 3,
	"configurePresets": [
		{
			"hidden": true,
			"name": "defaults",
			"warnings": {
				"dev": false
			},
			"cacheVariables": {
				"BUILD_CXX_LANGUAGE_PACKAGE": "ON",
				"BUILD_JAVA_LANGUAGE_PACKAGE": "OFF",
				"BUILD_PYTHON_LANGUAGE_PACKAGE": "OFF",

				"Boost_NO_WARN_NEW_VERSIONS": "ON",

				"CMAKE_VERBOSE_MAKEFILE": "TRUE",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "TRUE"
			}
		},
		{
			"hidden": true,
			"name": "vcpkg-defaults",
			"inherits": "defaults",
			"generator": "Ninja",
			"binaryDir": "${sourceParentDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
				"IS_VCPKG_BUILD": "TRUE",
				"Boost_NO_SYSTEM_PATHS": "ON"
			}
		},
		{
			"name": "vcpkg-Debug",
			"displayName": "Ninja Debug Build",
			"inherits": "vcpkg-defaults",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug"
			}
		},
		{
			"name": "vcpkg-Release",
			"displayName": "Ninja Release Build",
			"inherits": "vcpkg-defaults",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "vcpkg-RelWithDebInfo",
			"displayName": "Ninja RelWithDebInfo Build",
			"inherits": "vcpkg-defaults",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "RelWithDebInfo"
			}
		}
	]
}
